{
  "compilerOptions": {
    "baseUrl": "./",
    "types": [
      "node",
      "jest"
    ],
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "paths": {
      "@common": [
        "../common"
      ],
      "@common/*": [
        "../common/*"
      ],
      "@model/*": [
        "./src/app/core/model/*"
      ],
      "@controller/*": [
        "src/app/controller/*"
      ],
      "@bll/*": [
        "./src/app/core/bll/*"
      ],
      "@dal/*": [
        "./src/app/core/dal/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "copyStatic.ts",
    "rm-dist.ts"
  ]
}